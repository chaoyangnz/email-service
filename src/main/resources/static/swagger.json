{
  "swagger": "2.0",
  "info": {
    "description": "Email Service.",
    "version": "1.0.0",
    "title": "Email Service",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "chao@yang.to"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "",
  "basePath": "/",
  "tags": [
    {
      "name": "email",
      "description": "email endpoints"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/email": {
      "post": {
        "tags": [
          "email"
        ],
        "summary": "Send an email",
        "description": "",
        "operationId": "send",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "message",
            "description": "email message to be sent",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          {
            "in": "query",
            "name": "enrich",
            "description": "whether enable email body enrichment",
            "required": false,
            "type": "boolean"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted",
            "schema": {
              "$ref": "#/definitions/Result"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/GenericError"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server error",
            "schema": {
              "$ref": "#/definitions/GenericError"
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    }
  },
  "securityDefinitions": {
    "ApiKeyAuth": {
      "description": "Bearer Apikey",
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "Message": {
      "type": "object",
      "properties": {
        "subject": {
          "type": "string",
          "maxLength": 200
        },
        "body": {
          "$ref": "#/definitions/Body"
        },
        "to": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/Recipient"
          }
        },
        "cc": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Recipient"
          }
        },
        "bcc": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Recipient"
          }
        }
      }
    },
    "Recipient": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "pattern": "^([a-zA-Z0-9_\\-\\.]+)@(([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5}))$"
        }
      }
    },
    "Body": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["TEXT", "HTML"]
        },
        "content": {
          "type": "string",
          "maxLength": 5000
        }
      }
    },
    "GenericError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "errors": {
          "type": "object"
        }
      }
    },
    "Result": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "sentAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Email Service API",
    "url": "https://es.yang.to"
  }
}
